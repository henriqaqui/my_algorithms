{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc Compilar e depurar o arquivo ativo",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "bubbleSort.c",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compilador: /usr/bin/gcc",
        }
    ],
    "version": "2.0.0"
}